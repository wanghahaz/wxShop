.chit {
  position: relative;
  height: 410rpx;
}
.chit .box_bg{
  position: absolute;
  width: 100%;
  height: 100%;
}
.chit .logs_box{
  width: 76%;
  position: absolute;
  left: 12%;
  top: 40rpx;
  background: #fff;
  height: 430rpx;
  border-radius: 12rpx;
}
.history{
  position: absolute;
  background: #fff;
  width: 100%; 
  bottom: 6rpx;
  line-height: 80rpx;
}
.history >text{
  flex: 1;
}
.openMen{
  height: 160rpx;
  background: #3B3836;
  padding: 0 40rpx 0 70rpx;
  border-radius:18rpx; 
  margin: 64rpx auto 40rpx auto;
}
.openMen>text:nth-of-type(2){
  text-align: right;
  color: #fff;
}
.recommended{
  margin-top: 100rpx;
}
.recommended::after,.recommended::before{
  width: 35%;
}
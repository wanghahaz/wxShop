<view class="container">
  <view class="scroll_title flex fs_10">
    <view catchtap="selectIndex" data-index="0" class="flex_line_c_m {{sIndex==0?'active':''}}">
      <image wx:if="{{sIndex==0}}" class="friend" src="../../image/friend_ac.png"></image>
      <image wx:else class="friend" src="../../image/friend.png"></image>
      <text>成功邀请好友</text>
    </view>
    <view catchtap="selectIndex" data-index="1" class="flex_line_c_m {{sIndex==1?'active':''}}">
      <image wx:if="{{sIndex==1}}" class="card" src="../../image/card_ac.png"></image>
      <image wx:else class="card" src="../../image/card.png"></image>
      <text>我的双倍收益卡</text>
    </view>
  </view>
  <scroll-view scroll-top="{{scroll_top}}"  style="height:{{height}}rpx" class="scroll_box" scroll-y bindscrolltolower="bindscrolltolower">
    <view wx:if="{{userList.length==0}}" class="noInva flex column flex_m">
      <image src="../../image/noInva.png"></image>
      <text wx:if="{{sIndex==0&&userList.length==0&&!isBottom}}" style="margin:30rpx 0 0 0" class="fs_15 fcb2">还没有邀请朋友哦~</text>
      <text wx:if="{{sIndex==1&&userList.length==0&&!isBottom}}" style="margin:30rpx 0 0 0" class="fs_15 fcb2">还没有双倍收益卡哦~</text>
    </view>
    <view wx:if="{{sIndex==0}}" class="width94">
      <block wx:for="{{userList}}" wx:key="{{index}}">
        <view class="fs_15 userList box_zing flex flex_lr flex_m">
          <view class="flex flex_m">
            <image src="{{item.user.avatar}}"></image>
            <text style="margin:0 0 0 20rpx">{{item.user.username}}</text>
          </view>
          <text class="flex_nosize">{{item.created_at}}</text>
        </view>
      </block>
    </view>
    <block wx:else>
      <view wx:for="{{userList}}" wx:key="{{index}}" class="card_box width94">
        <view class="flex flex_lr_m">
          <text class="card_text">视频双倍收益卡</text>
          <text class="card_btn tc fs_13">未使用</text>
        </view>
        <view class="flex flex_m">
          <text class="fs_13 card_time">有效期：{{item.left_days}}天</text>
        </view>
      </view>
    </block>
    <view wx:if="{{isBottom}}">
      <view class="downLoding"></view>
      <view style="height:50rpx"></view>
    </view>
    <view wx:if="{{isBottom==false&&userList.length!=0}}" class="noMore">已加载全部！</view>
  </scroll-view>

  <view class="bottom_box flex_line_c">
    <!--open-type="share"  -->
    <!-- data-path="/pages/tabar/share/share"  catchtap="toRouter" -->
    <button open-type="share" hover-class='none' class="invita fs_16 tc">邀请好友</button>
    <view bindtap="showModel" class="rule flex_c_m flex">
      <text class="./iconfont/icontishi:before icon" style="font-size:30rpx"></text>
      <text class="fs_13">活动规则</text>
    </view>
  </view>
  <view bindtap="showModel" catch:touchmove hidden="{{showMask}}" class="mask">
  </view>
  <view class="ruleModel {{!showMask?'activeRule':''}}">
    <view style="line-height:70rpx;" class="tc">活动规则</view>
    <view class="width94 fs_14" style="margin:20rpx auto;">
      <rich-text nodes="{{rule}}"></rich-text>
    </view>
    <view bindtap="showModel" class="sumbit tc">确认</view>
  </view>
</view>
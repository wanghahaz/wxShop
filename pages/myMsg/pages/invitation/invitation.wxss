.scroll_title {
  padding-top: 2px;
  height: 100rpx;
  background: #f18e1e;
}

.scroll_title >view {
  color: #fff;
}

.scroll_title >.active {
  background: #f8f6f7;
  color: #000;
  border-radius: 10rpx 10rpx 0 0;
}

.scroll_title image {
  margin-bottom: 4rpx;
}

.scroll_title .friend {
  width: 38rpx;
  height: 34rpx;
}

.scroll_title .card {
  width: 32rpx;
  height: 34rpx;
}

.bottom_box {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 90rpx;
}

.invita {
  margin: 0 0 50rpx 0;
  width: 55%;
  line-height: 84rpx;
  color: #fff;
  background: #f18e1e;
  border-radius: 40rpx;
}

.rule {
  color: #c3c3c3;
}

.scroll_box {
  width: 100%;
}

.noInva {
  margin-top: 100rpx;
}

.noInva image {
  width: 126rpx;
  height: 110rpx;
}                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 

.userList {
  padding: 10px;
  border-bottom: 1px solid #fff;
}

.userList image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.userList>view {
  margin: 14rpx 0;
}

.card_box {
  margin: 34rpx auto;
  height: 300rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 40px 0px rgba(218, 218, 218, 0.6);
  border-radius: 10rpx;
}

.card_box >view:nth-of-type(1) {
  height: 120rpx;
  background-image: linear-gradient(to right, #fff 2%, #f7f7f7, #fff);
}

.card_box >view {
  box-sizing: border-box;
  padding: 0 60rpx;
}

.card_box .card_text {
  font-weight: 600;
}

.card_box .card_btn {
  color: #f2923e;
  width: 128rpx;
  line-height: 54rpx;
  background: rgba(242, 146, 62, 0.33);
  border-radius: 26rpx;
}
.card_box .card_time{
  margin-top: 100rpx;
  color: rgba(0, 0, 0, 0.3)
}
.ruleModel {
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 99;
  transform: translateY(110%);
  -webkit-transform: translateY(110%);
  transition: all 0.3s ease;
  -webkit-transition: all 0.3s ease;
}

.ruleModel .sumbit {
  line-height: 80rpx;
  color: white;
  background: #f18e1e;
}

.activeRule {
  transform: translateY(0);
  -webkit-transform: translateY(0);
}
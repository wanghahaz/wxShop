.box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow-y: auto;
  background: #fff;
}

.user {
  position: relative;
  padding: 22rpx 50rpx;
}

.user .badge {
  position: absolute;
  top: 16rpx;
  left: 120rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: red;
}

.user .img {
  width: 82rpx;
  height: 82rpx;
  border-radius: 18rpx;
  margin-right: 26rpx;
}

.user_right {
  width: 100%;
  padding: 4rpx 0 8rpx 0;
  border-bottom: 1px solid #eee;
}

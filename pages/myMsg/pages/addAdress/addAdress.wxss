@import '../../../../element/area/area.wxss';

.section {
  font-size: 30rpx;
  position: relative;
  height: 86rpx;
  background: #fff;
  border-bottom: 1rpx solid #f8f6f7;
  padding: 0 4%;
}

.section>view {
  width: 150rpx;
}

.section input, .section textarea {
  margin-top: 4rpx;
}

.textarea {
  padding: 20rpx 4%;
  height: 130rpx;
}

.textarea textarea {
  width: 60%;
  height: 100rpx;
  line-height: 1.8ï¼›;
}

.wx-switch-input {
  width: 42px !important;
  height: 22px !important;
}

.wx-switch-input::before {
  width: 41px !important;
  height: 22px !important;
}

.wx-switch-input::after {
  width: 20px !important;
  height: 20px !important;
}

.btn-area {
  position: fixed;
  width: 74%;
  left: 13%;
  bottom: 40rpx;
}

.btn-area button {
  margin-top: 24rpx;
  line-height: 86rpx;
  border-radius: 42rpx;
  background: #f18e1e;
  height: 86rpx;
  color: #fff;
  width: 100%;
  font-size: 34rpx;
}

.btn-area .del {
  background: #b2b2b2;
}

.area {
  position: relative;
}

.area .animation-button {
  width: 80%;
  right: 0;
  top: 0;
  position: absolute;
  height: 100%;
}

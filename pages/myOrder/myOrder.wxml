<view class="container">
  <scroll-view scroll-x scroll-left="{{scrollLeft}}" style="width: 100%;white-space: nowrap" class="title">
    <text data-index="0" style="margin-left:36rpx" bindtap="bindchange" class="{{titleIndex==0?'active':''}} tc">全部</text>
    <text data-index="1" bindtap="bindchange" class="{{titleIndex==1?'active':''}} tc">待付款</text>
    <text data-index="2" bindtap="bindchange" class="{{titleIndex==2?'active':''}} tc">待发货</text>
    <text data-index="3" bindtap="bindchange" class="{{titleIndex==3?'active':''}} tc">待收货</text>
    <text data-index="4" bindtap="bindchange" class="{{titleIndex==4?'active':''}} tc">待评价</text>
    <text data-index="5" bindtap="bindchange" class="{{titleIndex==5?'active':''}} tc">退款/售后</text>
  </scroll-view>

  <block wx:if="{{titleIndex==0}}">
    <block wx:for="{{2}}" wx:key="{{index}}">
      <view class="dealis_order width94 box_zing" data-path="/pages/orderDealis/orderDealis" bindtap="toRouter">
        <view class="title_name flex flex_lr">
          <text>我是第{{index}}个店铺></text>
          <text class="fs_14 fcF1">买家已付款</text>
        </view>
        <!-- <view class="coding fs_14">订单编号:E123456789</view> -->
        <view class="goods_Dealis flex flex_nosize" wx:for="{{3}}" wx:for-item="value" wx:for-index="ind" wx:key='{{ind}}'>
          <image class="goodsImg flex_nosize" src="https://ss2.bdstatic.com/70cFvnSh_Q1YnxGkpoWK1HF6hhy/it/u=2870455309,2484184181&fm=26&gp=0.jpg"></image>
          <view class="goodsDealis">
            <view class="flex">
              <text class="clamp_2 fs_14">我是第{{ind}}商品我是第{{ind}}商品我是第{{ind}}商品商品我是第{{ind}}商品</text>
              <view style="width:70rpx" class="flex column flex_nosize flex_lr">
                <text class="fs_16 ter">￥99</text>
                <text class="fs_14 ter">×2</text>
              </view>
            </view>
            <text class="fs_12 fcb2">134号牛油果绿  L</text>
          </view>
        </view>

        <view class="flex count flex_end">
          <text class="fs_12" style="margin-right:30rpx">共2件商品</text>
          <text class="fs_16">实付金额：￥198</text>
        </view>
        <view class="btn count flex fs_13">
          <text data-id="111" catchtap="cancel" class="evaluation" style="border-color:#B2B2B2">取消订单</text>
          <text class="evaluation fcF1">查看订单</text>
        </view>
      </view>
    </block>
    <view wx:if="{{isLoading}}">
      <view class="downLoding"></view>
      <view style="height:50rpx"></view>
    </view>
  </block>
  <block wx:elif="{{titleIndex==1}}">

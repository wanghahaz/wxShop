                <text class="fs_14 ter">×2</text>
              </view>
            </view>
            <text class="fs_12 fcb2">134号牛油果绿  L</text>
          </view>
        </view>
        <view class="flex count flex_end">
          <text class="fs_16">合计：￥198</text>
        </view>
        <view class="btn count flex fs_13">
          <text class="evaluation" data-id="111" catchtap="cancel" style="border-color:#B2B2B2">取消订单</text>
          <text catchtap="submitMoney" class="evaluation fcF1">确认付款</text>

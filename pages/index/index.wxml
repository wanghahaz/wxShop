<!--index.wxml-->
<view class="container">
  <dialog bind:myevent="myevent" isInfo="{{isGetInfo}}" class="awardModel"></dialog>
  <view class="title">
    <image class="bg" src="../../image/bg.png"></image>
    <view style="height:38rpx"></view>
    <view bindtap="toRouter" data-path="/pages/search/search" class="search width90">
      <text class="./iconfont/iconsousuo:before icon" style="font-size:28rpx"></text>
      <text class="border"></text>
      <text class="seaText fs_15">请输入关键词</text>
    </view>
  </view>
  <swiper indicator-dots="true" autoplay="true" interval="2000" duration="200" circular='true' class="width94 swiper_ab">
    <block wx:for="{{bannerList}}" wx:key="{{index}}">
      <swiper-item>
        <image src="{{item.thumb}}" onerror="" class="slide-image"></image>
      </swiper-item>
    </block>
  </swiper>
  <view class="flex flex_sa seckill width94 flex_wrap">
    <block wx:for="{{navList}}" wx:key="{{index}}">
      <view class="seckillList flex flex_nosize">
        <image class="image" src="{{item.icon}}"></image>
        <text class="fs_13 clamp_1 tc" style="color:#F18E1E;margin:4rpx 0 0 0;width:95%">{{item.name}}</text>
      </view>
    </block>
  </view>
  <view catchtap="suckTop" wx:if="{{scrollTop>clientHeight}}" class="suckTop">
    <text class="./iconfont/iconarrow-right-copy:before icon" style="font-size:46rpx;color:#fff"></text>
  </view>
  <!-- 活动专区 -->
  <view wx:if="{{is_on!=2}}" class="activity width94 flex column box_zing">
    <view class="flex flex_sa" bindtap="toRouter" data-path="/pages/seckill/seckill">
      <text style="width:40%" class="fs_19">限时秒杀</text>
      <view class="flex flex_m flex_end">
        <text class="fs_12">{{h}}:{{m}}:{{s}}</text>
        <text style="margin:0 0 0 20rpx" class="fs_14 fcb2">更多秒杀></text>
      </view>
    </view>
    <view class="flex flex_lr">
      <block wx:for="{{seckillList}}" wx:key="{{index}}">
        <view class="flex column activity_box" data-id="{{item.goods_id}}" data-skuId="{{item.goods_sku_id}}" data-path="/pages/goodsDealis/goodsDealis" bindtap="toRouter">
          <image src="{{item.goods.goods_thumb}}" class="activity_img"></image>
          <text style="margin-top:4rpx" class="fs_12 clamp_1">{{item.goods.goods_name}}</text>
          <view class="fs_11 flex flex_lr">
            <text class="fcb2">￥{{item.goods.goods_market_price}}</text>
            <text class="fcF1">￥{{item.goods_promotion_price}}</text>
          </view>
          <text class="rob fs_12 tc">马上抢</text>
        </view>
      </block>
    </view>
  </view>
  <!-- 商品列表 -->
  <view data-path="/pages/zluckPage/luckPage" bindtap="toRouter" class="fs_19 tc recommended" style="color:#B2B2B2">好物推荐</view>
  <view class="shop_list flex_wrap width90" style="width:92%">
    <block wx:for="{{shopList}}" wx:key="{{index}}">
      <one_shop data-id="{{item.id}}" data-skuId="{{item.sku_id}}" data-path="/pages/goodsDealis/goodsDealis" bindtap="toRouter" class="{{index%2==0?'oneList ml':'oneList'}}" obj="{{item}}"></one_shop>
    </block>
  </view>
  <view class="noMore" wx:if="{{!isPullDownRefresh}}">没有更多数据了...</view>
  <image bindtap="switchTab" data-path="/pages/advertising/advertising" class="chit" src="../../image/chit1.png"></image>
</view>
.box_adress {
  justify-content: space-between;
  height: 180rpx;
  padding: 30rpx 26rpx;
  background: #fff;
  margin: 10rpx 0;
}

.box_big {
  padding-bottom: 190rpx;
}

.box {
  background: #fff;
  margin-bottom: 10rpx;
}

.box_adress>text, .noAdress>text {
  margin: auto 0;
}

.adress_co {
  width: 80%;
}

.addImg {
  display: inline-block;
  width: 64rpx;
  line-height: 64rpx;
  font-size: 50rpx;
  color: #fff;
  background: #f18e1e;
}

.gps {
  width: 45rpx;
  height: 60rpx;
}

.shopName {
  padding: 20rpx 0 10rpx 0;
}

.goodsImg {
  width: 230rpx;
  height: 230rpx;
}

.goods {
  margin: 16rpx auto;
}

.goods_dea {
  width: 80%;
  margin-left: 24rpx;
}

.good_name {
  width: 90%;
}

.goods .remarks {
  width: 230rpx;
  display: block;
  line-height: 38rpx;
  background: #e9e9e9;
  color: #b2b2b2;
  margin: 4rpx 0 0 10rpx;
  border-radius: 16rpx;
}

.box_size {
  margin: 30rpx auto;
}

.box_size >input {
  margin-left: 20rpx;
  box-sizing: border-box;
  width: 60%;
  padding-left: 10rpx;
  border-radius: 10rpx;
  background: #f8f6f7;
}

.box_size>text:nth-of-type(1) {
  width: 230rpx;
  text-align: right;
}

.check {
  width: 38rpx;
  height: 38rpx;
}

.nocheck {
  display: inline-block;
  border-radius: 50%;
  border: 1px solid #b2b2b2;
}

.money {
  position: fixed;
  left: 0;
  height: 80rpx;
  width: 100%;
  bottom: 101rpx;
  padding: 0 30rpx;
  z-index: 9;
  background: #fff;
}

.flexd_bt {
  border-top: 1px solid #e8e8e8;
  background: #fff;
  z-index: 10;
  position: fixed;
  bottom: 0;
  justify-content: flex-end;
  left: 0;
  height: 100rpx;
}

.flexd_bt .total {
  color: #fff;
  background: #f18e1e;
  width: 167rpx;
  line-height: 60rpx;
  margin: 0 40rpx 0 20rpx;
}

.way image {
  width: 36rpx;
  height: 36rpx;
}

.way {
  position: fixed;
  background: #fff;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 1000;
  transform: translateY(110%);
  -webkit-transform: translateY(110%);
  transition: all 0.3s ease;
  -webkit-transition: all 0.3s ease;
}

.transMask {
  transform: translateY(0);
  -webkit-transform: translateY(0);
}

.close {
  line-height: 82rpx;
  background: #f18e1e;
  color: #fff;
}

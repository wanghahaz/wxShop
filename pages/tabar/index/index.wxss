.container_box {
  position: relative;
}

/* 头部 */

.title {
  height: 370rpx;
  position: relative;
}

.title .bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

/* 轮播 */

.swiper_ab {
  width: 92%;
  height: 300rpx;
  position: absolute;
  left: 4%;
  top: 140rpx;
  background: rgba(255, 255, 255, 0);
}

.swiper_ab swiper-item, swiper image, .swiper_ab {
  border-radius: 18rpx;
  overflow: hidden;
}

swiper image {
  border-radius: 18rpx;
  width: 100%;
  height: 100%;
}

.indicator_dots {
  display: inline-block;
  z-index: 1000;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 360rpx;
}

.indicator_dots>text {
  display: inline-block;
  width: 10rpx;
  margin-right: 6rpx;
  height: 10rpx;
  background: #fff;
  border-radius: 50%;
}
.indicator_dots> .dotsAc{
  width: 20rpx;
  border-radius: 6rpx;
}

/*分类推荐  */

.clasfiy {
  width: 92%;
  margin: 20rpx auto 50rpx auto;
  background: #fff;
  border-radius: 18rpx;
  height: 260rpx;
}

.clasfiy>view {
  padding: 22rpx 24rpx 0 24rpx;
  flex: 1;
}

.clasfiy>view>text:nth-of-type(2) {
  margin: 8rpx 0 0 0;
}

.clasfiy>view>view {
  flex: 1;
}

.clasfiy>view>view image {
  width: 40%;
  height: 110rpx;
}

.clasfiy>view:nth-of-type(1) {
  border-right: 1px solid #f8f8f8;
}

.seckill {
  padding: 40rpx 0 20rpx 0;
  margin-top: 70rpx;
}

.seckill .image {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  /* background: linear-gradient(#f49a96, #e5004f); */
}

.seckillList {
  width: 20%;
  flex-direction: column;
  align-items: center;
}

/*  */

.activity {
  border-radius: 18rpx;
  background: #fff;
  padding: 32rpx 32rpx 17rpx 32rpx;
}

.activity .activity_img {
  width: 100%;
  height: 147rpx;
}

.activity_box {
  width: 32%;
  margin: 30rpx 0 0 0;
}

.activity_box>view {
  padding: 0;
  margin: 6rpx 0;
}

.activity .rob {
  line-height: 36rpx;
  width: 80%;
  color: #fff;
  background: -webkit-linear-gradient(left, #8706ff, #d3bce8);
  background: -o-linear-gradient(right, #8706ff, #d3bce8);
  background: -moz-linear-gradient(right, #8706ff, #d3bce8);
  background: linear-gradient(to right, #8706ff, #d3bce8);
  border-radius: 16rpx;
  margin: 0 auto;
}

.activity_box>view >text:nth-of-type(1) {
  text-decoration: line-through;
}

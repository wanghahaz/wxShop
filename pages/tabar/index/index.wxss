.container_box {
  position: relative;
}

.banner_index image {
  width: 100%;
  height: 300rpx;
}

/* 搜索框 */

.search {
  margin: 20rpx auto 30rpx auto;
}

/* swiper */

.swiper_ab {
  width: 100%;
  height: 300rpx;
  background: rgba(255, 255, 255, 0);
}

.swiper_ab swiper-item, swiper image, .swiper_ab {
  border-radius: 10rpx;
}

swiper image {
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
  margin: 0 20rpx;
}

.indicator_dots {
  display: inline-block;
  z-index: 1000;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  top: 0;
}

.indicator_dots>text {
  display: inline-block;
  width: 10rpx;
  margin-right: 6rpx;
  height: 10rpx;
  background: rgba(242, 125, 30, 0.3);
  border-radius: 50%;
}

.indicator_dots> .dotsAc {
  border-radius: 6rpx;
  background: #f27d1e;
}

/* 分类列表 */

.fiy_list, .terrace>view {
  box-shadow: 0px 1px 34rpx 0px rgba(176, 176, 176, 0.3);
}

.fiy_list {
  width: 93%;
  position: relative;
  overflow: hidden;
  height: 350rpx;
  background: #fff;
  margin: 10rpx auto 20rpx auto;
}

.fiy_smt {
  background: linear-gradient(0deg, rgba(254, 189, 13, 1) 0%, rgba(242, 125, 30, 1) 100%);
  border-radius: 30rpx;
  width: 46%;
  color: #fff;
  font-weight: 600;
  line-height: 64rpx;
  left: 27%;
  top: -54rpx;
  position: relative;
}

.fiy_list .box_list {
  position: relative;
  padding: 23rpx 0 30rpx 0;
}

.fiy_list .box_show {
  width: 100%;
  position: relative;
  height: 78rpx;
  background-image: linear-gradient(to right, #fff 2%, #f7f7f7, #fff);
}

.fiy_list .box_show::after, .fiy_list .box_show::before {
  position: absolute;
  content: "";
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  top: -15rpx;
  background: #f8f6f7;
}

.fiy_list .box_show::after {
  left: -15rpx;
}

.fiy_list .box_show::before {
  right: -15rpx;
}

/*分类推荐  */

.seckill {
  width: 93%;
  margin: 50rpx auto 0 auto;
}

.seckill .image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.seckillList {
  width: 20%;
  flex-direction: column;
  align-items: center;
}

.look_video {
  height: 380rpx;
  margin: 0 auto;
}

/* 平台推荐 */

.terrace, .banner_index {
  padding: 0 3.5%;
}

.terrace>view {
  display: flex;
  width: 48%;
  height: 160rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
}

.terrace text {
  margin: 36rpx 26rpx;
  font-weight: 600;
}

/*抢购  */

.rushGood {
  margin: 40rpx 0 20rpx 0;
  position: relative;
  overflow-x: auto;
  padding: 0 0 50rpx 3.5%;
  display: -webkit-box;
  -webkit-flex-wrap: nowrap;
  flex-wrap: nowrap;
}

.rush_box {
  position: relative;
  width: 240rpx;
  height: 314rpx;
  background: #fff;
  box-shadow: 0px 1px 30px 0px rgba(211, 211, 211, 0.4);
  border-radius: 4rpx;
}

.rush_box .sub {
  position: absolute;
  bottom: -25rpx;
  left: 15%;
  width: 70%;
  line-height: 50rpx;
  color: #fff;
  background: rgba(242, 125, 30, 1);
  border-radius: 24rpx;
}

.text_dot {
  width: 80%;
}
}

.seckill {
  /* border-bottom: 2rpx solid #E4E4E4; */
  padding: 28rpx 0;
  margin-top: 120rpx;
}

.seckill .image {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  background: linear-gradient(#f49a96, #e5004f);
}

.seckillList {
  width: 20%;
  flex-direction: column;

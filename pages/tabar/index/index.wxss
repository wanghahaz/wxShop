.activity {
  border-radius: 18rpx;
  background: #fff;
  padding: 32rpx 32rpx 17rpx 32rpx;
}

.activity .activity_img {
  width: 100%;
  height: 147rpx;
}

.activity_box {
  width: 32%;
  margin: 30rpx 0 0 0;
}

.activity_box>view {
  padding: 0;
  margin: 6rpx 0;
}

.activity .rob {
  line-height: 36rpx;
  width:80%; 
  color: #fff;
  background:-webkit-linear-gradient(left,#8706ff,#d3bce8);
	background:-o-linear-gradient(right,#8706ff,#d3bce8);
	background:-moz-linear-gradient(right,#8706ff,#d3bce8);
	background:linear-gradient(to right,#8706ff,#d3bce8);
  border-radius: 16rpx;
  margin: 0 auto;
}

.activity_box>view >text:nth-of-type(1) {
  text-decoration: line-through;
}

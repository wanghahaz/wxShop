<!--index.wxml-->
<view class="container">
  <view class="box_adress flex  box_zing" data-path="/pages/adressList/adressList" bind:tap="toRouter" wx:if="{{!address.name}}">
    <view class="noAdress flex ">
      <text class="addImg tc ">+</text>
      <text class="fs_17 " style="margin-left:20rpx; ">新增收货地址</text>
    </view>
    <text class="./iconfont/iconarrow-right-copy:before icon " style="font-size:36rpx;float: right; "></text>
  </view>
  <view wx:else class="box_adress flex box_zing flex_m" data-path="/pages/adressList/adressList" bind:tap="toRouter">
    <image class="gps flex_nosize" src="../../image/gps.png"></image>
    <view class="flex_tb adress_co fs_15">
      <text>收货人：{{address.name}} {{address.tel}}</text>
      <text style="width:100%" class="clamp_2">收获地址: {{address.adress}}{{address.countyName}}{{address.countyName}}</text>
    </view>
    <text class="./iconfont/iconarrow-right-copy:before icon flex_nosize " style="font-size:36rpx;float: right; "></text>
  </view>
  <view class="box_big ">
    <block wx:for="{{goodsList}}" wx:key="{{index}} ">
      <view class="box">
        <view class="shopName  width94">{{item.name}}</view>
        <view class="goods width94 " wx:for="{{item.goods}}" wx:for-item="value" wx:for-index="ind" wx:key='{{ind}}'>
          <view class="goodsDealis flex ">
            <image class="goodsImg flex_nosize " src="../../image/domo.jpg"></image>
            <view class="flex_tb goods_dea ">
              <text class="good_name fs_14 clamp_2 ">{{value.name}}哇哇哇哇哇哇哇哇哇哇哇哇哇哇哇哇哇哇</text>
              <text class="remarks fs_12 tc ">134号牛油果绿  L</text>
              <view class="flex flex_lr ">
                <text class="fcF1">￥99</text>
                <text>×{{value.amount}}</text>
              </view>
            </view>
          </view>
        </view>
        <view data-type="1" bindtap="showMake" class="width94 fs_14 box_size flex flex_m flex_lr">
          <text>配送方式</text>
          <text>快递 免运费></text>
        </view>
        <view class="width94 fs_14 box_size flex flex_m ">
          <text class="flex_nosize ">买家留言</text>
          <input class="fs_14 width90" placeholder="点击给商家留言 "></input>
        </view>
        <view style="padding: 10rpx 0 30rpx 0 " class="width94 flex flex_m flex_lr fs_15">
          <text></text>
          <text>小计：￥198</text>
        </view>
      </view>
    </block>
    <view class="fs_14  flex flex_m flex_lr money box_zing">
      <text>可使用10元代金券</text>
      <image  bindtap="setShopCheck" wx:if="{{is_jifen}}" class="check" src="../../image/check.png"></image>
      <text  bindtap="setShopCheck" wx:else class="nocheck box_zing check"></text>
    </view>
  </view>
  <view class="flexd_bt flex flex_m ">
    <text>总额:</text>
    <text class="fcF1 ">￥198(已省10元)</text>
    <text bindtap="submint" class="total tc">提交订单</text>
  </view>
  <view class="mask" data-type="0" catchtap="showMake" wx:if="{{maskType}}">
  </view>
  <view class="way {{maskType!=0?'transMask':''}}" catchtap>
    <view>
      <view class="tc fs_16" style="margin:15rpx auto">配送方式</view>
      <view class="flex flex_m flex_lr width94" style="margin:20rpx auto">
        <image src="../../image/check.png"></image>
        <text class="fs_14">快递 免运费</text>
      </view>
      <view data-type="0" class="close fs_20 tc" catchtap="showMake">关闭</view>
    </view>
  </view>
</view>